{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend-admin/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "frontend-user/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "frontend-admin/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend-user/build/$1"
    }
  ]
}
